# IdleHunter - Example environment variables
# Copy to .env and fill in real values. Never commit .env.

# Django
SECRET_KEY=your-secret-key-change-in-production
DEBUG=0
ALLOWED_HOSTS=localhost,127.0.0.1
# Production: ALLOWED_HOSTS=your-domain.com,192.168.1.10
CSRF_TRUSTED_ORIGINS=http://localhost:8000

# Database (PostgreSQL)
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=idlehunter
POSTGRES_USER=idlehunter
POSTGRES_PASSWORD=change-me
# Or single URL:
# DATABASE_URL=postgres://idlehunter:change-me@db:5432/idlehunter

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# LDAP / AD (optional; when set, LDAP backend is used for login)
# LDAP_SERVER_URI=ldap://your-dc.example.com
# LDAP_BIND_DN=cn=idlehunter,ou=service,dc=example,dc=com
# LDAP_BIND_PASSWORD=
# LDAP_USER_BASE=ou=users,dc=example,dc=com

# MFA (optional; set to 1 to enable two-factor auth)
# ENABLE_MFA=0

# vCenter / Aria / Stor2RRD (use secrets in production)
# DataSource.config in Admin can override; password_env_key points to env var name.
# vCenter (pyvmomi)
# VCENTER_HOST=vcenter.example.com
# VCENTER_PORT=443
# VCENTER_USER=administrator@vsphere.local
# VCENTER_PASSWORD=
# VCENTER_SSL_VERIFY=0
# VMware Aria
# ARIA_URL=https://aria.example.com
# ARIA_TOKEN=  (or ARIA_USER + ARIA_PASSWORD)
# Stor2RRD
# STOR2RRD_URL=https://stor2rrd.example.com
# STOR2RRD_API_KEY=

# SMTP (alerts / reports)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=1
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=
# DEFAULT_FROM_EMAIL=idlehunter@example.com

# Idle detection (rule-based: no activity for N days = idle)
# IDLE_DAYS_THRESHOLD=7

# i18n
LANGUAGE_CODE=tr
LANGUAGES=tr,en
